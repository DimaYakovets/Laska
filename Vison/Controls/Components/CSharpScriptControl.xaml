<UserControl x:Class="Vison.Controls.Components.CSharpScriptControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vison.Controls.Components"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="250">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ddd" />
        </Style>
    </UserControl.Resources>
    <UserControl.Content>
        <Grid Background="Transparent" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Class: Game.CelestialBody" />
            <TextBlock Grid.Row="1" Text="Properties" />

            <ItemsControl Grid.Row="2">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Mass:"/>
                    <Slider MinHeight="0" MaxHeight="100" Value="1" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </ItemsControl>
        </Grid>
    </UserControl.Content>
</UserControl>
