<UserControl x:Class="Vison.Controls.Layout.ScenePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vison.Controls.Layout"
             xmlns:cmps ="clr-namespace:Vison.Controls.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <UserControl.Resources>

    </UserControl.Resources>
    <UserControl.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250" MinHeight="250"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TreeView x:Name="HierarchyTree" Background="Transparent" BorderThickness="0"/>
            
            <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

            <ItemsControl x:Name="Components" Grid.Row="2" Padding="4">
                <cmps:TransformControl/>
                <cmps:CSharpScriptControl/>
            </ItemsControl>
        </Grid>
    </UserControl.Content>
</UserControl>
